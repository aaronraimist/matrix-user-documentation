# EditorConfig is awesome: http://EditorConfig.org

root = false

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[{*.rst,*.rst.txt}]
indent_style = space
indent_size = 3

[*.md]
indent_style = space
indent_size = 4

[{*.py,*.html}]
indent_style = space
indent_size = 4
